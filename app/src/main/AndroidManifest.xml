<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:Tools="http://schemas.android.com/apk/distribution">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        Tools:ignore="scopeStorege"/>




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/tienda_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tienda_icono_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rivertienda"
        tools:targetApi="31">
        <activity
            android:name=".vendedor.Productos.AgregarProductoActivity"
            android:exported="false" />
        <activity
            android:name=".SeleccionarTipoActivity"
            android:exported="false" />
        <activity
            android:name=".cliente.LoginClienteActivity"
            android:exported="false" />
        <activity
            android:name=".cliente.RegistroClienteActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.LoginVendedorActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.RegistroVendedorActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.MainActivityVendedor"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cliente.MainActivityCliente"
            android:exported="true" />
    </application>

</manifest>